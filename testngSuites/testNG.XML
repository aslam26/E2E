<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="E2E Web-app Automation">
    <test name="Juice Shop end to end automation tests --chrome">
        <parameter name="browserType" value="chrome" />
        <classes>
            <class name="com.juiceshopherokuapp.Tests.EndToEndTest"/>
        </classes>
    </test>
    <test name="Juice Shop end to end automation tests -- edge">
        <parameter name="browserType" value="edge" />
        <classes>
            <class name="com.juiceshopherokuapp.Tests.EndToEndTest"/>
        </classes>
    </test>
    <test name="Juice Shop end to end automation tests-- headless">
        <parameter name="browserType" value="headless" />
        <classes>
            <class name="com.juiceshopherokuapp.Tests.EndToEndTest"/>
        </classes>
    </test>
</suite>
